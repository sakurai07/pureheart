<div class = "row">
    <div class = "col-md-2"></div>
    <div class = "col-md-10">
        <%= form_with(model: @user,url:user_path(@user.id)) do |form| %>
            <% if @user.errors.any? %>
                <strong><%= @user.errors.count %>個のエラーがあります</strong>
                <ul>
                    <% @user.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            <% end %>

            <div class = "row">
                <div class = "col-md-6">
                    <%= form.label :name, 'なまえ', class: "form-label" %>
                    <%= form.text_field :name, class: "form-control" %>

                    <br>

                    <div class="field">
                    <%= form.label :学年, class: "form-label" %>
                    <%= form.select :grade, User.grades.keys.to_a, {}, class: "form-select" %>
                    </div>

                    <div class="field">
                    <%= form.label :組, class: "form-label" %>
                    <%= form.select :klass, User.klasses.keys.to_a, {}, class: "form-select" %>
                    </div>

                    <br>

                    <div class="field">
                    <%= form.label :icon, class: "form-label" %>
                    <%= form.file_field :icon, class: "form-control" %>
                    </div>
                </div>

                <div class = "col-md-6">
                    <%= form.label :hobby_1, '趣味1', class: "form-label" %>
                    <%= form.text_field :hobby_1, class: "form-control" %>

                    <br>

                    <%= form.label :hobby_2, '趣味2', class: "form-label" %>
                    <%= form.text_field :hobby_2, class: "form-control" %>

                    <br>

                    <%= form.label :hobby_3, '趣味3', class: "form-label" %>
                    <%= form.text_field :hobby_3, class: "form-control" %>

                    <br>

                    <%= form.label :hobby_4, '趣味4', class: "form-label" %>
                    <%= form.text_field :hobby_4, class: "form-control" %>

                    <br>

                    <%= form.label :hobby_5, '趣味5', class: "form-label" %>
                    <%= form.text_field :hobby_5, class: "form-control" %>
                </div>
            </div>

                <%= form.label :profile, '自己紹介', class: "form-label" %>
                <%= form.text_field :profile, class: "form-control", width: 100, row: 5 %>

                <p>
                    <table>
                        <tr>
                            <td><%= form.label :color_bgcolor_white, "しろ" %></td>
                            <td><%= form.radio_button :color, :bgcolor_white %></td>

                            <td><%= form.label :color_bgcolor_blue, "あお" %></td>
                            <td><%= form.radio_button :color, :bgcolor_blue %></td>

                            <td><%= form.label :color_bgcolor_pink, "ぴんく" %></td>
                            <td><%= form.radio_button :color, :bgcolor_pink %></td>

                            <td><%= form.label :color_bgcolor_yellow, "きいろ" %></td>
                            <td><%= form.radio_button :color, :bgcolor_yellow %></td>

                            <td><%= form.label :color_bgcolor_green, "みどり" %></td>
                            <td><%= form.radio_button :color, :bgcolor_green %></td>

                            <td><%= form.label :color_bgcolor_purple, "むらさき" %></td>
                            <td><%= form.radio_button :color, :bgcolor_purple %></td>

                            <td><%= form.label :color_bgcolor_orange, "おれんじ" %></td>
                            <td><%= form.radio_button :color, :bgcolor_orange %></td>
                        </tr>
                    </table>
                </p>

            <%= form.submit '更新', class: "btn btn-secondary" %>
        <% end %>
    </div>

</div>