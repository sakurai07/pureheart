<%# <h1>ログイン</h1> %>

<div class = "row">
    <div class = "col-md-12 text-center">
        <%= image_tag "/images/title.png", class: "img-fluid" %>
    </div>
</div>

<div class = "row">

    <div class = "col-md-4"></div>

    <div class = "col-md-4">

        <%= form_with model: @session, local: true do |form| %>

        <br>

        <%= form.label :user_name, 'ユーザーネーム', class: "form-label" %>
        <%= form.text_field :user_name, class: "form-control" %>

        <br>

        <%= form.label :password, 'パスワード', class: "form-label" %>
        <%= form.password_field :password, class: 'form-control' %>

        <br>

        <p class = "mozi" id = "danger"><%= flash[:danger] %></p>

        <%= form.submit 'ログイン', class: "btn btn-secondary" %>
        <% end %>

        <p></p>
        <%= link_to '新規登録はこちら', signup_path %>

    </div>

    <div class = "col-md-4"></div>

</div>

