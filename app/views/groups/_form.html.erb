      <div class="field">
        <div class = "contaner">
          <%= form.label :'グループ紹介' %>
          <%= form.label :グループ紹介, '　必須', class: "form-label ab"%>
        </div>
        <%= form.text_area :comment, class: "form-control" %>
      </div>

      <div class="field">
        <div class = "contaner">
          <%= form.label :'趣味１' %>
          <%= form.label :趣味１, '　必須', class: "form-label ab"%>
        </div>
