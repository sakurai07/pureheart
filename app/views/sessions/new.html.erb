<h1>ログイン</h1>

<%= form_with model: @session, local: true do |form| %>
    <%= flash[:danger] %>

    <%= form.label :user_name, 'ユーザーネーム' %>
    <%= form.text_field :user_name %>

    <%= form.label :password, 'パスワード' %>
    <%= form.password_field :password %>

    <%= form.submit 'ログイン' %>

<% end %>

<p></p>
<%= link_to '新規登録はこちら', signup_path %>