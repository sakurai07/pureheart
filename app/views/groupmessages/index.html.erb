<p id="notice"><%= notice %></p>

<h1>Groupmessages</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Message</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groupmessages.each do |groupmessage| %>
      <tr>
        <td><%= groupmessage.user_id %></td>
        <td><%= groupmessage.message %></td>
        <td><%= groupmessage.group_id %></td>
        <td><%= link_to 'Show', groupmessage %></td>
        <td><%= link_to 'Edit', edit_groupmessage_path(groupmessage) %></td>
        <td><%= link_to 'Destroy', groupmessage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Groupmessage', new_groupmessage_path %>
